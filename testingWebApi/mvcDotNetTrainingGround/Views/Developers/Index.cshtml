@model List<Developer>
<link href="Index.cshtml.css" rel="stylesheet">

<h1>Showing @Model.Count developers!</h1>

<table style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    @for (var i = 0; i < @Model.Count; i++)
    {
        if (i % 2 != 0)
        {
            <tr class="background">
                <td>@Model[i].Name</td>
                <td>@Model[i].Email</td>
                <td>
                    <a asp-controller="Developers" asp-action="Details" asp-route-id=@Model[i].Id>
                        Details
                    </a>
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td>@Model[i].Name</td>
                <td>@Model[i].Email</td>
                <td>
                    <a asp-controller="Developers" asp-action="Details" asp-route-id=@Model[i].Id>
                        Details
                    </a>
                </td>
            </tr>
        }
    }

</table>
<br />
<a asp-controller="Developers" asp-action="Create">Create a new developer</a>